<resources>
    <!-- Base application theme. -->
    <style name="Theme.Shopper.Base" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

    </style>

    <style name="Theme.Shopper.SplashScreen" parent="Theme.SplashScreen.IconBackground">
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>
        <item name="windowSplashScreenBackground">@color/main_blue</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/light_blue</item>
        <item name="postSplashScreenTheme">@style/Theme.Shopper.NoActionBar</item>
    </style>

    <style name="Theme.Shopper" parent="Theme.Shopper.Base">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/main_blue</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <!-- Important for text select handles-->
        <item name="colorSecondary">@color/light_blue</item>
        <item name="colorSecondaryVariant">@color/main_blue</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:textColorSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/main_blue</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Theme.Shopper.Dark" parent="Theme.Shopper.Base">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_dark_mode</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/darker_main_blue</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:textColorSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/main_dark_mode</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>
        <item name="android:windowBackground">@color/main_dark_mode</item>
    </style>

    <style name="Theme.Shopper.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Shopper.Dark.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Shopper.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Shopper.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>